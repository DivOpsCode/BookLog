<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Tracker Application</title>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table th, .table td {
      vertical-align: middle;
    }
    .favorite-icon {
      font-size: 1.5rem;
      cursor: pointer;
    }
  </style>
</head>
<body class="container py-4">

  <h1 class="text-center mb-4">üìö Book Tracker Application</h1>

  <!-- Book Records Table -->
  <h2 class="mb-3">Book Records</h2>
  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>Date Read</th>
        <th>Status</th>
        <th>Favorite</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#books}}
      <tr>
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>{{author}}</td>
        <td>{{genre}}</td>
        <td>{{rating}}</td>
        <td>{{date_read}}</td>
        <td>
          <span class="badge {{#status_read}}bg-success{{/status_read}} {{#status_to_read}}bg-warning{{/status_to_read}}">
            {{status}}
          </span>
        </td>
        <td class="text-center">
          <a href="/toggle-favorite/{{id}}" class="favorite-icon">
            {{#is_favorite}}‚≠ê{{/is_favorite}}
            {{^is_favorite}}‚òÜ{{/is_favorite}}
          </a>
        </td>
        <td>
          <a href="/updateform/{{id}}" class="btn btn-primary btn-sm">Edit</a>
          <a href="/delete/{{id}}" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      {{/books}}
    </tbody>
  </table>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
