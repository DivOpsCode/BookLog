<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Book Tracker Application</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table th, .table td { vertical-align: middle; }
    .favorite-icon { font-size: 1.5rem; cursor: pointer; }
  </style>
</head>
<body class="container py-4">

  <h1 class="text-center mb-4">üìö Book Tracker Application</h1>

  <div class="d-flex justify-content-between mb-3">
    <a href="/add" class="btn btn-success">‚ûï Add Book</a>
    <a href="/delete-all" class="btn btn-danger">üóë Delete All Books</a>
  </div>

  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Title <a href="/sort/title">üîΩ</a></th>
        <th>Author</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>Favorite</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#books}}
      <tr>
        <td>{{title}}</td>
        <td>{{author}}</td>
        <td>{{genre}}</td>
        <td>{{rating}}</td>
        <td>
          <a href="/favorite/{{id}}" class="favorite-icon">
            {{#is_favorite}}‚≠ê{{/is_favorite}}
            {{^is_favorite}}‚òÜ{{/is_favorite}}
          </a>
        </td>
        <td>
          <a href="/update/{{id}}" class="btn btn-warning btn-sm">Edit</a>
          <a href="/delete/{{id}}" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      {{/books}}
    </tbody>
  </table>

  <!-- Add Book Form -->
{{#showAddForm}}
<h2 class="mt-4">Add a Book</h2>
<form action="/add" method="POST" class="row g-3">
  <div class="col-md-6">
    <label class="form-label">Title</label>
    <input type="text" name="title" class="form-control" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Author</label>
    <input type="text" name="author" class="form-control" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Genre</label>
    <input type="text" name="genre" class="form-control" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Rating (1-5)</label>
    <input type="number" name="rating" min="1" max="5" class="form-control" required>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-success">Submit</button>
    <a href="/" class="btn btn-secondary">Cancel</a> <!-- Cancel Button -->
  </div>
</form>
{{/showAddForm}}


<!-- Update Book Form -->
{{#showUpdateForm}}
<h2 class="mt-4">Update Book</h2>
<form action="/update/{{book.id}}" method="POST" class="row g-3">
  <div class="col-md-6">
    <label class="form-label">Title</label>
    <input type="text" name="title" class="form-control" value="{{book.title}}" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Author</label>
    <input type="text" name="author" class="form-control" value="{{book.author}}" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Genre</label>
    <input type="text" name="genre" class="form-control" value="{{book.genre}}" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Rating (1-5)</label>
    <input type="number" name="rating" min="1" max="5" class="form-control" value="{{book.rating}}" required>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/" class="btn btn-secondary">Cancel</a> <!-- Cancel Button -->
  </div>
</form>
{{/showUpdateForm}}



</body>
</html>
